<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".page.FoodListFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="40dp"
                    android:gravity="center_vertical"
                    android:layout_marginHorizontal="15dp">
                    <LinearLayout
                        android:id="@+id/searchBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/search_background">
                        <EditText
                            android:id="@+id/editTextText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="text"
                            android:gravity="center"
                            android:hint="Tìm kiếm món ăn" />
                        <ImageButton
                            android:id="@+id/searchButton"
                            android:layout_width="35dp"
                            android:layout_height="50dp"
                            app:layout_constraintStart_toEndOf="@+id/editTextText"
                            app:layout_constraintTop_toBottomOf="@+id/dotsLayout"
                            app:srcCompat="@drawable/search_icon"
                            android:scaleType="centerCrop"
                            android:layout_marginEnd="10dp"
                            android:backgroundTint="@color/searchBackground"/>
                    </LinearLayout>
                </LinearLayout>
                <GridLayout
                    android:id="@+id/filter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/header"
                    android:layout_marginTop="20dp"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:layout_marginHorizontal="15dp"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/spinner_background"

                        android:gravity="center"
                        android:paddingVertical="5dp"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_margin="5dp">
                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/location"
                            android:layout_marginHorizontal="8dp"/>
                        <Spinner
                            android:layout_weight="1"
                            android:id="@+id/locationSp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/spinner_background"
                        android:layout_marginHorizontal="10dp"

                        android:gravity="center"
                        android:paddingVertical="5dp"
                        android:layout_gravity="fill"
                        android:layout_columnWeight="1"
                        android:layout_margin="5dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/time"
                            android:layout_marginHorizontal="8dp"/>
                        <Spinner
                            android:layout_weight="1"
                            android:id="@+id/timeSp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/spinner_background"

                        android:gravity="center"
                        android:paddingVertical="5dp"
                        android:layout_gravity="fill"
                        android:layout_margin="5dp"
                        android:layout_columnWeight="1">
                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/dollar"
                            android:layout_marginHorizontal="8dp"/>
                        <Spinner
                            android:layout_weight="1"
                            android:id="@+id/priceSp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/spinner_background"
                        android:paddingVertical="5dp"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_margin="5dp">
                        <ImageView
                            android:layout_gravity="start"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/application"
                            android:layout_marginHorizontal="8dp"/>
                        <Spinner
                            android:layout_weight="1"
                            android:layout_gravity="start"
                            android:id="@+id/categorySp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                    </LinearLayout>
                </GridLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/foodList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/filter" />

                <ProgressBar
                    android:id="@+id/loading"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/foodList"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/foodList" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/filter"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <include android:id="@+id/empty"
                        layout="@layout/empty" />
                </LinearLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </FrameLayout>

</layout>